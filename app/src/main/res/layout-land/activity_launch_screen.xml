<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="com.example.brian.checkin.LaunchScreen">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/location_input"
            android:layout_width="402dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:hint="@string/restaurant_hint"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_query"
            android:layout_width="164dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:onClick="onQueryClick"
            android:text="@string/query"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0"
        android:text="" />

    <TextView
        android:id="@+id/uniqueKey"
        android:layout_width="306dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="@string/unique_key"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/keyOut"
        android:layout_width="306dp"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="" />

    <Button
        android:id="@+id/btn_copy"
        android:layout_width="164dp"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:layout_gravity="center"
        android:onClick="onCopyClick"
        android:text="@string/copy" />

</LinearLayout>
