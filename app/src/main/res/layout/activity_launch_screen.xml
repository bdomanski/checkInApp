<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            tools:context="com.example.brian.checkin.LaunchScreen">

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/location_input"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:hint="@string/restaurant_hint"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_query"
                android:layout_width="164dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_weight="0"
                android:onClick="onQueryClick"
                android:text="@string/query"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/output"
                android:layout_width="306dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/uniqueKey"
                android:layout_width="306dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text="@string/unique_key"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/keyOut"
                android:layout_width="306dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:text=""
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_copy"
                android:layout_width="164dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:onClick="onCopyClick"
                android:text="@string/copy" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible" />

    </LinearLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
